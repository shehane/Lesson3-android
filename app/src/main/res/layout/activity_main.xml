<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <Button
        android:id="@+id/button_toEquation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Equation"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"

        />

    <Button
        android:id="@+id/button_toMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_toEquation"

        android:layout_alignStart="@+id/button_toEquation"
        android:layout_below="@+id/button_toEquation"
        android:text="Menu" />
    <Button
        android:id="@+id/button_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/button_toMenu"
        android:text="Screen"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>