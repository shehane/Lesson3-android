<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.shaha.lesson3.MenuActivity">

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter data"
        android:textColorHint="#a7a780"
        android:padding="15dp"
        android:textColor="#f9f4f4"

        />

    <Button
        android:id="@+id/button_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext1"
        android:text="Call"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/button_dialpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_call"
        android:text="Dialpad"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/button_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_dialpad"
        android:text="Contact"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"

        />
    <Button
        android:id="@+id/button_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_contact"
        android:text="Browser"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/button_callLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_browser"
        android:text="Call log"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"

        />
    <Button

        android:id="@+id/button_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_callLog"
        android:text="Gallery"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        />
    <Button
        android:id="@+id/button_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_gallery"
        android:text="Camera"
        android:textColor="#ff4400"
        android:textSize="22sp"
        android:gravity="center"
        android:background="#565655"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        />

</RelativeLayout>
